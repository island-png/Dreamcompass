<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EnterGoal.EnterFinallyGoalFragment">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0.5dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="131dp"
        android:text="WHAT IS YOUR"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="98dp"
        android:text="FINALLY GOAL?"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/neumorphCardViewWhatyourgoal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorphCardViewWhatyourgoal"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="350dp"
        android:layout_height="190dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:neumorph_lightSource="rightBottom"
        app:neumorph_shadowElevation="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editwhatgoal"
            android:hint="Enter your finally goal!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </soup.neumorphism.NeumorphCardView>

    <TextView
        android:id="@+id/textviewWhatdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Why do you want to do it?"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@id/neumorphCardViewWhatyoudo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/neumorphCardViewWhatyourgoal"
        />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neumorphCardViewWhatyoudo"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="350dp"
        android:layout_height="190dp"
        app:neumorph_shapeType="flat"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textviewWhatdo"
        app:layout_constraintVertical_bias="0.733"
        app:neumorph_lightSource="rightBottom"
        app:neumorph_shadowElevation="10dp">

        <EditText
            android:id="@+id/editwhatdo"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:hint="Enter why do you want to do it!"/>
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/buttonOK"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="38dp"
        android:text="ok!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/neumorphCardViewWhatyoudo"/>


</androidx.constraintlayout.widget.ConstraintLayout>